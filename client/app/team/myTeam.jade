div.well(data-ng-controller="myTeamCtrl")

    table.table.table-condensed
        thead
            tr
                th(colspan=2)
                    h3 {{team.teamName}}
                        small  {{team.ownerName}}
                th.hidden-xs(data-ng-repeat="round in rounds")
                    span.text-muted {{'rnd ' + round.number}}
                th.text-center
                    span.text-muted total
        tbody
            tr
                td
                    div.playerList
                        a(ng-href="{{'/player/' + team.player1.id}}")
                            img.playerImage(ng-src="https://res.cloudinary.com/pga-tour/image/upload/t_headshots_player_s/headshots_{{team.player1.id}}.png")
                td
                    h4 {{team.player1.name.first + ' ' + team.player1.name.last}}
                    a(ng-href="{{'/player/' + team.player1.id}}")
                        span.glyphicon.glyphicon-list-alt
                        |  scorecard
                td.hidden-xs(data-ng-repeat="round in team.player1.rounds")
                    div.viewteam_rowItem {{round.modStablefordTotal}}
                td
                    div.viewteam_rowItem {{team.player1.modstable}}
            tr
                td
